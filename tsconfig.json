{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "Node",
        "baseUrl": "src",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "NodeNext"
        }
    },
    "include": ["src/**/*"]
}